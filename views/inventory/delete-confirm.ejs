<% if (title) { %>
   <h1 class="inventory"><%= title %></h1>

   <%- messages() %>

   <% if (errors) { %>
      <ul class="notice">
      <% errors.array().forEach(error => { %>
         <% if (error.msg !== "Invalid value") { %>
            <li><%= error.msg %></li>
         <% } %>
      <% }) %>
      </ul>
   <% } %>

   <div class="delete-inventory">
      <form class="delete-inventory-form" id="deleteInvForm" action="/inv/delete" method="post">

         <label for="inv_make">Make</label>
         <input type="text" id="inv_make" name="inv_make" required readonly value="<%= locals.inv_make %>">

         <label for="inv_model">Model</label>
         <input type="text" id="inv_model" name="inv_model" required readonly value="<%= locals.inv_model %>">

         <label for="inv_year">Year</label>
         <input type="text" id="inv_year" name="inv_year" required readonly value="<%= locals.inv_year %>">

         <label for="inv_price">Price</label>
         <input type="number" id="inv_price" name="inv_price" step="0.01" required readonly value="<%= locals.inv_price %>">

         <button type="submit">Delete Vehicle</button>
         <p>Confirm Deletion - The delete is permanent.</p>

         <input type="hidden" name="inv_id"
         <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
         <% } %>>
      </form>
   </div>

<% } else {
   res.redirect('/')
} %>
