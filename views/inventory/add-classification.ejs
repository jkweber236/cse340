<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
   <ul class="notice">
   <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
         <li><%= error.msg %></li>
      <% } %>
   <% }) %>
   </ul>
<% } %>

<div class="new-classification">
   <p>FIELD IS REQUIRED.</p>
   <form action="/inv/add-classification" method="POST">
      <label for="classification_name">Classification Name</label>
      <div class="classification-name-reqs">NAME MUST BE ALPHABETIC CHARACTERS ONLY.</div>
      <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$">
      <button type="submit">Add Classification</button>
   </form>
</div>