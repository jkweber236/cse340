<% if (title) { %>
   <h1 class="account-title"><%= title %></h1>
   <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
   <ul class="notice">
   <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
         <li><%= error.msg %></li>
      <% } %>
   <% }) %>
   </ul>
<% } %>

<div class="account-management">
   <h2>Welcome <%= locals.accountData.account_firstname %></h2>
   <p>You're logged in.</p>

   <p><a href="/account/edit/<%=locals.accountData.account_id %>">Edit Account Information</a></p>
   <p></p>
   <% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv">Manage Inventory</a></p>
   <% } %>

   <h2>My Reviews</h2>
   <%- userReviews %>

</div>