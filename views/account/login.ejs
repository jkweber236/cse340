<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
   <ul class="notice">
   <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
         <li><%= error.msg %></li>
      <% } %>
   <% }) %>
   </ul>
<% } %>

<form class="login" method="post" action="/account/login">
   <label for="account_email">Email:</label>
   <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>"><br>
   
   <label for="account_password">Password:</label>
   <div class="password-requirements">There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</div>
   <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
   
   <button type="submit" >Login</button>
   <p>No account? <a href="/account/register">Sign-up</a></p>
</form>