<% if (title) { %>
   <h1><%= title %></h1>
   <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<form class="login" method="POST" action="/account/login">
   <label for="account_email">Email:</label>
   <input type="email" id="account_email" name="account_email" required><br>
   
   <label for="account_password">Password:</label>
   <input type="password" id="account_password" name="account_password" required><br>
   
   <button type="submit" >Login</button>
   <p>No account? <a href="/account/register">Sign-up</a></p>
</form>